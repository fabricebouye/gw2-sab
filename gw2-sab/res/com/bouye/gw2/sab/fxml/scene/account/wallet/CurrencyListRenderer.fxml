<?import javafx.scene.control.ListCell?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root type="HBox" styleClass="currency-list-renderer" fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bouye.gw2.sab.scene.account.wallet.CurrencyListRendererController">
    <children>
        <Label fx:id="nameLabel" minWidth="50"  maxWidth="1.7976931348623157E308" text="Label" HBox.hgrow="ALWAYS" />
        <Label fx:id="amountLabel" text="Label" />
        <Label fx:id="iconLabel">
            <graphic>
                <ImageView fx:id="icon" fitWidth="32.0" preserveRatio="true" />
            </graphic>
            <tooltip>
                <Tooltip fx:id="infoTip" maxWidth="350.0" text="Label" wrapText="true" />
            </tooltip>
        </Label>
    </children>
</fx:root>
