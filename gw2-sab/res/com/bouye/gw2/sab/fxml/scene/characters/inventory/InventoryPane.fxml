<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<fx:root id="VBox" prefHeight="400.0" prefWidth="600.0" styleClass="inventory-pane" type="VBox" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bouye.gw2.sab.scene.characters.inventory.InventoryPaneController">
   <children>
      <HBox fx:id="headerHBox" styleClass="top-bar">
         <children>
            <Label fx:id="inventoryLabel" text="Label" />
            <Region fx:id="filler" HBox.hgrow="ALWAYS" />
            <MenuButton fx:id="optionsButton" mnemonicParsing="false" styleClass="options-button" text="%action.options.label">
               <graphic>
                  <Text fx:id="optionsIcon" styleClass="awesome-icon" text="%icon.fa.gear" />
               </graphic>
            </MenuButton>
         </children>
      </HBox>
      <TextField fx:id="searchField" promptText="%action.search.prompt" />
      <ScrollPane fx:id="inventoryScrollPane" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <content>
            <StackPane fx:id="inventoryContent">
               <children>
                  <VBox fx:id="inventoryVBox" />
               </children>
            </StackPane>
         </content>
      </ScrollPane>
   </children>
</fx:root>
